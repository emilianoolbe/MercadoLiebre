<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head.ejs') %>
    </head>
    <body>
        <header>
            <%- include('../partials/header.ejs') %>
        </header>

        <main class="main-ofertas">
            <% for(let i = 0; i < productosOferta.length ; i++){ %>
                <div class="div-Ofertas">
                    <a href="/products/detalle/<%= productosOferta[i].id %>" class="links-Art"><article class= " articulo-margin borde-producto">
                        <div class="camion-con-foto">
                            <img src="/imagenes/<%= productosOferta[i].img %>.jpg" alt="<%= productosOferta[i].nombre %>" class="resoluciones">
                            <p class="item-truck"><i class="fa-solid fa-truck-fast iconos-main-truck truck"></i></p>
                        </div>
                
                        <div class="contenedor-descripciones">
                            <p class="precios item1">uS$<%= productosOferta[i].precio %></p>    
                            <p class="main-size  iconos-main item0"><%= productosOferta[i].descuento %>% off </p>
                            <p class="main-size item4 "><%= productosOferta[i].nombre %></p>    
                        </div>
                    </article></a>
                    </div>
                <% } %> 
        </main>
        
        <footer>
            <%- include('../partials/footer.ejs') %>
        </footer>
        
    </body>
</html>