<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head.ejs') %>
        <title>Ofertas</title>
    </head>
    <body>
        <header>
            <%- include('../partials/nav.ejs') %>  
            <%- include('../partials/header.ejs') %>
        </header>

        <main class="main-ofertas">
            <% for(let i = 0; i < products.length ; i++){ %>
                <div class="div-Ofertas">
                    <a href="/products/detalle/<%= products[i].id %>" class="links-Art"><article class= " articulo-margin borde-producto">
                        <div class="camion-con-foto">
                            <img src="/imagenes/img-products/<%= products[i].img %>" alt="<%= products[i].name %>" class="resoluciones">
                            <p class="item-truck"><i class="fa-solid fa-truck-fast iconos-main-truck truck"></i></p>
                        </div>
                
                        <div class="contenedor-descripciones">
                            <p class="precios item1">uS$<%= products[i].price %></p>    
                            <p class="main-size  iconos-main item0"><%= products[i].discount %>% off </p>
                            <p class="main-size item4 "><%= products[i].name %></p>    
                        </div>
                    </article></a>
                    </div>
                <% } %> 
        </main>
        
        <footer>
            <%- include('../partials/footer.ejs') %>
        </footer>
        
    </body>
</html>