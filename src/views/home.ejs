<!DOCTYPE html>
<html>
<head>
   <%- include('./partials/head.ejs') %>
</head>
<body>
    <%- include('./partials/header.ejs') %>    
    <main class="main">
            <h2 class="titulares">Basado en tu última visita</h2> 
            <div class="contenedor-1200">         
                <section class= "main-articulos-visitas">
                    
                    <div class="productos-desktop">
                        <%for (let i = 0; i < 2; i++){ %>
                        <a href="/products/detalle/<%= productos[i].id %> "  class="links-Art "><article class= " articulo-margin borde-producto">
                            <div class="camion-con-foto">
                                <img src="/imagenes/img-products/<%= productos[i].img %>" alt="<%= productos[i].nombre %>" class="resoluciones">
                                <p class="item-truck"><i class="fa-solid fa-truck-fast iconos-main-truck truck"></i></p>
                            </div>
                       
                            <div class="contenedor-descripciones">
                                <p class="precios item1">uS$<%= productos[i].precio %></p>    
                                <p class="main-size  iconos-main item0"><%= productos[i].descuento %>% off </p>
                                <p class="main-size item4 "><%= productos[i].nombre %></p>    
                            </div>
                        </article></a>
                        <% } %>
                    </div>

                    <div class="productos-desktop">
                        <%for (let i = 2; i < 4; i++){ %>
                        <a href="/products/detalle/<%= productos[i].id %>" class="links-Art "><article class= "articulo-margin borde-producto">
                            <div class="camion-con-foto">
                                <img src="/imagenes/img-products/<%= productos[i].img %>" alt="<%= productos[i].nombre %>" class="resoluciones">
                                <p class="item-truck"><i class="fa-solid fa-truck-fast iconos-main-truck truck"></i></p>
                            </div>
                           
                            <div class="contenedor-descripciones">    
                                <p class="precios"  id="dimesiones-descripciones">uS$<%= productos[i].precio %></p>
                                <p class="main-size iconos-main item0"><%= productos[i].descuento %>% off </p>
                                <p class="main-size item4"><%= productos[i].nombre %></p>
                            </div>
                        </article></a>
                        <% } %>
                    </div>
                </section>
                    
                <h2 class="titulares ofertas-none">Sección de ofertas</h2>       
                
                <section  class="main-articulos-ofertas">
                    <div class="productos-desktop">
                        <%for (let i = 4; i < 6; i++){ %>
                         <a href="/products/detalle/<%= productos[i].id %>"  class="links-Art"><article class="articulo-margin borde-producto">
                                <div class="camion-con-foto">
                                    <img src="/imagenes/img-products/<%= productos[i].img %>" alt="<%= productos[i].nombre %>" class="resoluciones">
                                <p class="item-truck"><i class="fa-solid fa-truck-fast iconos-main-truck truck"></i></p>
                                </div>
                                <div class="contenedor-descripciones">
                                    <p class="precios item1"> uS$<%= productos[i].precio %></p>
                                    <p class="main-size iconos-main item0"><%= productos[i].descuento %>% off</p>
                                    <p class="main-size item4"><%= productos[i].nombre %></p>
                                </div>   
                        </article></a>
                        <% } %>
                    </div>
                        
                        <div class="productos-desktop">
                            <%for (let i = 6; i < 8; i++){ %>
                            <a href="/products/detalle/<%= productos[i].id %>" class="links-Art "><article class="articulo-margin borde-producto">
                                <div class="camion-con-foto">
                                    <img src="/imagenes/img-products/<%= productos[i].img %>" alt="<%= productos[i].nombre %>" class="resoluciones">
                                    <p class="item-truck"><i class="fa-solid fa-truck-fast iconos-main-truck truck"></i></p>
                                </div> 
                                <div class="contenedor-descripciones">
                                    <p class="precios"  id="dimesiones-descripciones">uS$<%= productos[i].precio %></p>
                                    <p class="main-size iconos-main item0"><%= productos[i].descuento %>% off</p>
                                    <p class="main-size item4"><%= productos[i].nombre %></p>
                                </div>
                            </article></a>
                            <% } %>
                        </div>
                </section>          
            </div>
    </main>     
    <footer >
            <%- include('./partials/footer.ejs') %>
            <a href="#principio" class="link-arrow-home" ><i class="fa-solid fa-arrow-up-long" id="arrow"></i></a>
    </footer>       
</body>
</html>